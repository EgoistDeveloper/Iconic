<local:BasePage x:TypeArguments="viewmodel:WelcomeViewModel" x:Class="Iconic.UI.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:viewmodel="clr-namespace:Iconic.ViewModel.App"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Iconic.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{StaticResource WhiteBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Image Source="pack://application:,,,/Resources/undraw_elements_cipa.png"/>

        <TextBlock Grid.Row="1" 
                   Text="Iconic Supports Your Designs"
                   Foreground="{StaticResource BlueGrey200Brush}"
                   Margin="40 0 40 40"
                   FontSize="30"
                   FontWeight="Light"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</local:BasePage>
